<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="线路："
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="28dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/video_source_index_0"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:text="主线路"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/video_source_index_1"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="28dp"
                    android:text="备用线路1"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/video_source_index_2"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="28dp"
                    android:text="备用线路2"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/video_source_audio"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="28dp"
                    android:text="仅听音频"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="清晰度："
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="28dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/video_quality_index_0"
                    android:layout_width="80dp"
                    android:gravity="center"
                    android:layout_height="25dp"
                    android:text="原画"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/video_quality_index_1"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="28dp"
                    android:text="高清"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/video_quality_index_2"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_marginLeft="28dp"
                    android:text="流畅"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>